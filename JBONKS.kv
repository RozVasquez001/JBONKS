WindowManager:
    FirstPage:
    SecondPage:
    ThirdPage:

<FirstPage>:
    name: "first"
    size_hint: .7,1
    pos_hint: {'center_x': .5, 'center_y':.5 }
    GridLayout:
        spacing: '5dp'
        cols: 1
        Image:
            source:"JBLOGO.png"
        Label:
            text:'JBONKS'
            color: 0,0,0,1
            font_size: "15dp"

        GridLayout:
            spacing: "3dp"
            cols: 2
            Label:
                text: 'First Name'
                color: 0,0,0,1
                font_size: "10dp"
            TextInput:
                multiline: False

            Label:
                text: 'Last Name'
                color: 0,0,0,1
                font_size: "10dp"
            TextInput:
                multiline: False

            Label:
                text: 'Email'
                color: 0,0,0,1
                font_size: "10dp"
            TextInput:
                multiline: False
              
            Label:
                text: 'Mobile Number'
                color: 0,0,0,1
                font_size: "10dp"
            TextInput:
                multiline: False


            Label:
                text: 'Enter Password'
                color: 0,0,0,1
                font_size: "10dp"
            TextInput:
                multiline: False

            Label:
                text: 'Confirm Password'
                color: 0,0,0,1
                font_size: "10dp"
            TextInput:
                multiline: False

        Button:
            text:'SignUp'
            bold:True
            font_size: "10dp"
            size_hint: .25,.25
            background_color: 0,0,0,1
            background_normal: ""
            on_press: root.on_press_button()

        Label:
            text:root.my_text
            bold:True
            font_size: "10dp"
            size_hint: .25,.25
            background_color: 0,0,0,1

        GridLayout:
            spacing: '10dp'
            cols: 2
            Label:
                text: 'Already have an Account?'
                color: 0,0,0,1
                font_size: "10dp"
            Button:
                text:'LogIn'
                bold:True
                font_size: "10dp"
                size_hint: .25,.25
                background_color: 1,0,0,1
                background_normal: ""
                on_release: app.root.current="second"
                

<SecondPage>:
    name: "second"
    size_hint: .7,1
    pos_hint: {'center_x': .5, 'center_y':.5 }
    GridLayout:
        spacing: '10dp'
        cols: 1
        Image:
            source:"Jbonkslogo.png"
        Label:
            text:'JBONKS'
            color: 0,0,0,1
            font_size: "15dp"

        GridLayout:
            spacing: "10dp"
            cols: 2
            Label:
                text: 'Full Name'
                color: 0,0,0,1
                font_size: "10dp"
            TextInput:
                multiline: False

            Label:
                text: 'Password'
                color: 0,0,0,1
                font_size: "10dp"
            TextInput:
                size_hint: .5,.5
                multiline: False


        Button:
            text:'LogIn'
            bold:True
            font_size: "10dp"
            size_hint: .25,.25
            background_color: 0,0,0,1
            background_normal: ""
            on_release: app.root.current="third"

        GridLayout:
            spacing: '10dp'
            cols: 2
            Label:
                text: 'Create Account?'
                color: 0,0,0,1
                font_size: "10dp"
            Button:
                text:'SignUp'
                bold:True
                font_size: "10dp"
                size_hint: .25,.25
                background_color: 1,0,0,1
                background_normal: ""
                on_release: app.root.current="first"

<ThirdPage>:
    name: "third"
    size_hint: .7,1
    pos_hint: {'center_x': .5, 'center_y':.5 }

    GridLayout:
        spacing: '10dp'
        cols: 1
        Image:
            source:"jbonkslogo.png"
        Label:
            text:'HOMEPAGE'
            color: 0,0,0,1
            font_size: "15dp"
        GridLayout:
            spacing: '10dp'
            cols: 1
            Button:
                text:'BACK'
                bold:True
                font_size: "10dp"
                size_hint: .25,.25
                background_color: 1,0,0,1
                background_normal: ""
                on_release: app.root.current="second"
